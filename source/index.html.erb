				</div>
		</div><!-- /col-lg-10 -->
		
		
		<% data.seminar[0...4].each do |s| %>
		<% if s.view == '○' then %>
		<div class="col-lg-10 col-lg-offset-1">
			
				<div>
					<a href="<%= s.url %>"><%= s.title %></a></br>
					<%= s.description %>
				</div>
		</div><!-- /col-lg-10 -->
		
		<div class="col-md-6 col-lg-offset-1">		
				<table id="stb" class="table table-bordered">
					<caption>開催概要</caption>
					<tbody>
						<tr>
							<th>日時</th>
							<td><% s.date.split(',').each_with_index do |t, idx| %><%= t %>(<%= s.time.split(',')[idx] %>)<% end %><% if s.open then %></br><%= s.open %><% end %></td>
						</tr>
						<tr>
							<th nowrap="nowrap">開催場所</th>
							<td><% if s.place_url then %><a href="<%= s.place_url %>"><%= s.place %></a><% else %><%= s.place %><% end %></br>(<%= s.address %>)</td>
						</tr>
						<tr>
							<th>参加費</th>
							<td><%= s.price %></td>
						</tr>
						<% if s.capacity then %>
						<tr>
							<th>定員</th>
							<td><%= s.capacity %>人(先着順)</td>
						</tr>
						<% end %>
					</tbody>
				</table>	
		</div><!-- /col-md-6 -->
		<% end %>
		<% end %>			

	</div><!-- /row -->
</div> <!-- /container -->


